<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:avatar="urn:import:com.calclab.hablar.core.client.avatars">
	
	<g:HTMLPanel addStyleNames="chatMessage">
		<avatar:AvatarWidget ui:field="avatar" size="tiny" />
		<span ui:field="metadata" class="metadata" />
		<g:Label ui:field="author" styleName="author" />
		<span ui:field="body" class="body" />
	</g:HTMLPanel>
</ui:UiBinder>